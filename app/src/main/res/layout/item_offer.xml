<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:background="@drawable/rect_round_border_1dp_gray"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/imageHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/ic_hand" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ips_regular"
        android:textColor="#040C15"
        android:textSize="14sp"
        tools:text="Daniel gets your offer for" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/ips_semi_bold"
        android:textColor="#040C15"
        android:textSize="18sp"
        tools:text="â‚¬1 498,00" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A040C15" />

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/ips_regular"
        android:gravity="center"
        android:textColor="#040C15"
        android:textSize="12sp"
        tools:text="To complete the deal, Daniel must accept your offer, until that you can discuss the details here" />

</LinearLayout>